<%= form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-horizontal">

  <div class=" form-group field">
    <%= f.label "상호명", :class=>"form-label col-sm-2" %>
	<div class="col-sm-10">
    	<%= f.text_field :name, size:20, :class=>"form-control"%>
	</div>
  </div>
  
  <div class="field form-group">
    <%= f.label "사업자등록번호", :class=>"form-label col-sm-2"%>
	<div class="col-sm-10">
    	<%= f.text_field :reg_no, size:10, :class=>"form-control" %>
	</div>
  </div>
  
  <div class="field form-group">
    <%= f.label "전화번호", :class=>"form-label col-sm-2"%>
	<div class="col-sm-10">
    	<%= f.telephone_field :tel, :class=>"form-control" %>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "주소", :class=>"form-label col-sm-2"%>
	<div class="col-sm-10">
    	<%= f.text_field :address, size:50, :class=>"form-control"%>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "소개", :class=>"form-label col-sm-2"%>
	<div class="col-sm-10">
    	<%= f.text_area :description, rows:5, :class=>"form-control"%>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "운영시간", :class=>"form-label col-sm-2"%>
	<div class="col-sm-10">
		<%= f.time_field :open_time, size:4,:class=>"form-control", :style=>"width:15%;display:inline" %> - 
   	 	<%= f.time_field :close_time, size:4,:class=>"form-control", :style=>"width:15%;display:inline"%>
	</div>
  </div>
  <div class="field form-group">
    <%= f.label "사진", :class=>"form-label col-sm-2"%>
	<div class="col-sm-10">
    	<%= f.file_field :pic, :multiple=>false %>
	</div>
  </div>
  
  <div class="actions">
    <%= f.submit "저장", :class=>"btn btn-success pull-right"%>
  </div>
</div>
<% end %>
